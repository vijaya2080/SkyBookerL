<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_row">

    <RelativeLayout
        android:layout_width="5dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:id="@+id/rlSelected" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/rlSelected"
        android:id="@+id/rlImageAndTextCoach"
        android:layout_marginLeft="27dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/dropdownTravaller"
            android:src="@mipmap/coach" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dropdownTravaller"
            android:text="Coach"
            android:id="@+id/tv_CoachType"
            android:gravity="center"
            android:textSize="15dp"
            android:paddingLeft="25dp"
            android:layout_centerVertical="true" />
</RelativeLayout>
</RelativeLayout>