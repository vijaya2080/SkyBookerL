<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_centerVertical="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/reviewCitySingleFlight"
            android:src="@mipmap/review" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_fromCityFlight"
            android:layout_below="@+id/reviewCitySingleFlight"
            android:text="Review"/>
        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/reviewtravelPointSingle"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/reviewCitySingleFlight"
            android:background="#000"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/travelersCitySingleFlight"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/review"
            android:layout_toRightOf="@+id/reviewtravelPointSingle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_toCitySingleFlight"
            android:text="Travelers"
            android:layout_below="@+id/travelersCitySingleFlight"
            android:layout_alignStart="@+id/travelersCitySingleFlight" />
        <View
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:id="@+id/BooktravelPoint"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/travelersCitySingleFlight"
            android:background="#000"/>
        android:background="#000"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/booktoCitySingleFlight"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/review"
            android:layout_toRightOf="@+id/BooktravelPoint" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_booktoCitySingleFlight"
            android:text="Book!"
            android:layout_below="@+id/booktoCitySingleFlight"
            android:layout_alignStart="@+id/booktoCitySingleFlight" />
    </RelativeLayout>


</RelativeLayout>