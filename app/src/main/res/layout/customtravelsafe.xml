<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5">
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/imSingleFlightReviewTravelsafe"

        android:src="@mipmap/fly"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_SingleFlightTrvelSafe"
        android:layout_weight="1"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:text="Travel Protection"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/tv_SingleFlightReviewTravelsafe"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_SingleFlightTrvelSafecost"
        android:layout_weight="1"
        android:textSize="13dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:text="$89.45"
        android:textStyle="normal"
        android:layout_toRightOf="@+id/tv_SingleFlightTrvelSafe"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/imSingleFlightReviewTravelsafei"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_SingleFlightTrvelSafecost"
        android:src="@mipmap/i"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/imSingleFlightTravelsafecheck"

        android:layout_alignParentRight="true"
      />


</LinearLayout>