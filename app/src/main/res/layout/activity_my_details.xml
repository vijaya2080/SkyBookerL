<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/myDetailsToolBar"
        layout="@layout/toollayout">
    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myDetailsToolBar"
        android:layout_above="@+id/btupdatemydetailsSearch">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personalInfoLayout"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/layout_personal"
                    android:background="@color/BarColor"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Personal Information"
                        android:textColor="#FFF"
                        android:layout_marginLeft="5dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/tv_pi"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_personal"
                    android:id="@+id/spinnertitleLayout"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsTitleLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:layout_marginTop="11dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Title*"
                            android:id="@+id/et_myDetailsTitleLayout"
                            android:layout_below="@+id/layout_personal"
                            android:drawableEnd="@mipmap/spinner"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsFirstnameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_myDetailsFirstnameLayout"
                            android:hint="First Name"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnertitleLayout"
                    android:orientation="horizontal"
                    android:id="@+id/linear_middle"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsMiddlenameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_myDetailsMiddlenameLayout"
                            android:hint="Middle Name"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsLastNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_myDetailsLastNameLayout"
                            android:hint="Last Name"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_middle"
                    android:id="@+id/spinnerdobLayout"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsDOBLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="DOB*"
                            android:id="@+id/myDetailsDOBLayout"
                            android:layout_below="@+id/layout_personal"
                            android:drawableEnd="@mipmap/calendar"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsGenderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="11dp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_myDetailsGenderLayout"
                            android:hint="Gender"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            android:drawableEnd="@mipmap/spinner" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerdobLayout"
                    android:id="@+id/spinnerusLayout"
                    android:orientation="horizontal"

                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsPhoneCodeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="11dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="+01(US)"
                            android:id="@+id/et_myDetailsPhoneCodeLayout"
                            android:layout_below="@+id/layout_personal"
                            android:drawableEnd="@mipmap/spinner"
                            android:singleLine="true"
                            android:focusableInTouchMode="false"
                            android:editable="false"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/text_input_myDetailsPhoneLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_myDetailsPhoneLayout"
                            android:hint="Contact Phone"
                            android:singleLine="true" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/billingInfoLayout"
                android:layout_below="@+id/personalInfoLayout"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/billingInfo"
                    android:layout_marginTop="10dp"
                    android:background="#fff">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/layout_billing"
                        android:background="@color/BarColor"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Billing Information"
                            android:textColor="#FFF"
                            android:layout_marginLeft="5dp"
                            android:layout_centerInParent="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/tv_bi"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_billing"
                        android:id="@+id/spinneraddress1Layout"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsAddress1Layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address1*"
                                android:id="@+id/et_myDetailsAddress1Layout"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:id="@+id/spinneraddress2Layout"
                        android:orientation="horizontal"
                        android:layout_below="@+id/spinneraddress1Layout"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsAddress2Layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Address2"
                                android:singleLine="true"
                                android:id="@+id/et_myDetailsAddress2Layout" />
                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinneraddress2Layout"
                        android:orientation="horizontal"
                        android:id="@+id/linear_city"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsCityLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_myDetailsCityLayout"
                                android:hint="City*"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsCityZipLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_myDetailsCityZipLayout"
                                android:hint="ZIP*"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_city"
                        android:orientation="horizontal"
                        android:id="@+id/linear_unitedstates">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsCountryLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_myDetailsCountryLayout"
                                android:hint="United States"
                                android:drawableEnd="@mipmap/spinner"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:editable="false" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsStateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_myDetailsStateLayout"
                                android:drawableEnd="@mipmap/spinner"
                                android:hint="State*"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:editable="false" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_unitedstates"
                        android:id="@+id/spinneradditionalLayout"
                        android:orientation="horizontal"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsAdditionalLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Additional Requests(Frequent Flyer and more..)"
                                android:id="@+id/et_myDetailsAdditionalLayout"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/downarrow"
                            android:id="@+id/MyDetailsdown"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:src="@mipmap/up"
                            android:id="@+id/MyDetailsup"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/RL_AdditionalMyDeatils"
                        android:visibility="gone"
                        android:layout_below="@+id/spinneradditionalLayout">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/linear_seatpref">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsSeatPrefLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_myDetailsSeatPrefLayout"
                                android:hint="Seat Pref."
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:drawableEnd="@mipmap/spinner" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsMealPrefLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_text_input_myDetailsMealPrefLayout"
                                android:drawableEnd="@mipmap/spinner"
                                android:hint="Meal Pref."
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:editable="false" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerservicesLayout"
                        android:orientation="horizontal"
                        android:layout_below="@+id/linear_seatpref"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsSpecialServicesLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Special Services"
                                android:drawableEnd="@mipmap/spinner"
                                android:singleLine="true"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:id="@+id/et_myDetailsSpecialServicesLayout" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerTSALayout"
                        android:orientation="horizontal"
                        android:layout_below="@+id/spinnerservicesLayout">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsTSARedressLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="TSA Redress #"
                                android:singleLine="true"
                                android:id="@+id/et_myDetailsTSARedressLayout" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerfrequentLayout"
                        android:orientation="horizontal"
                        android:layout_below="@+id/spinnerTSALayout">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsFrequentFlyerInfoLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Frequent Flyer Information"
                                android:id="@+id/et_myDetailsFrequentFlyerInfoLayout"
                                android:singleLine="true" />
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/addtext"
                            android:id="@+id/MyDeatailsAddFlyerInfo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinnerfrequentLayout"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:id="@+id/linear_frequent">
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsAirlineLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="11dp"
                            android:layout_below="@+id/text_input_myDetailsFrequentFlyerInfoLayout">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:drawableEnd="@mipmap/spinner"
                                android:hint="Airline*"
                                android:focusableInTouchMode="false"
                                android:editable="false"
                                android:id="@+id/et_myDetailsAirlineLayout" />
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_myDetailsFrequentFlyerLayout"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_input_myDetailsAirlineLayout">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Frequent Flyer Number"
                                android:singleLine="true"
                                android:id="@+id/et_myDetailsFrequentFlyerLayout" />
                        </android.support.design.widget.TextInputLayout>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:id="@+id/MyDetails_minus"
                            android:src="@mipmap/minusbt"/>
                    </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/btupdatemydetailsSearch"
        android:textColor="#fff"
        android:background="#dd4f43"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>