<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#fff">

<ImageView
    android:layout_width="40dp"
    android:layout_height="45dp"
    android:id="@+id/calanderImg"
    android:src="@mipmap/ic_launcher"
    android:layout_marginLeft="10dp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=" Text"
    android:id="@+id/calanderText"
    android:textSize="15dp"
    android:textColor="@color/colorPrimary"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/calanderImg"
    android:layout_toEndOf="@+id/calanderImg" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Day"
    android:id="@+id/tvCalanderDay"
    android:textSize="10dp"
    android:layout_below="@+id/calanderText"
    android:layout_alignRight="@+id/calanderText"
    android:layout_alignStart="@+id/calanderText"
    android:layout_alignLeft="@+id/calanderText"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Month"
    android:textSize="10sp"
    android:textColor="#000"
    android:id="@+id/tvCalanderMonth"
    android:layout_alignBottom="@+id/calanderImg"
    android:layout_toEndOf="@+id/calanderImg" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="25"
    android:textColor="#000"
    android:textSize="22dp"
    android:id="@+id/tvCalanderDate"
    android:layout_below="@+id/calanderText"
    android:layout_toEndOf="@+id/calanderText" />
</RelativeLayout>