<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:id="@+id/travelWeightLL">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/imSingleFlightTravelsafeAssist"
            android:src="@mipmap/travelerassist"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_SingleFlightTrvelSafeAssist"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="Travel Assist"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_SingleFlightTrvelSafeassistcost"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:text="$89.45"
            android:textStyle="normal"
           />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:id="@+id/imSingleFlightTravelsafeassisti"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:src="@mipmap/i"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/imSingleFlightTravelsafecheck1"
            android:layout_alignParentRight="true"/>

    </LinearLayout>

</LinearLayout>